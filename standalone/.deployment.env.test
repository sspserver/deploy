# Example: Using External PostgreSQL and Redis, Containerized ClickHouse
POSTGRES_MODE=external
CLICKHOUSE_MODE=container  
REDIS_MODE=external

# External PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sspserver
POSTGRES_USER=sspserver
POSTGRES_PASSWORD=changeme

# ClickHouse will run in container (no external config needed)

# External Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# SSP Server Ports
SSP_SERVER_PORT=8080
SSP_API_PORT=8081
SSP_CONTROL_PORT=8082

# Nginx Proxy Ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Domain Configuration
SSP_SERVER_DOMAIN=localhost
SSP_API_DOMAIN=api.localhost
SSP_CONTROL_DOMAIN=control.localhost

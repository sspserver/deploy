# Example: Mixed configuration - external PostgreSQL, containerized ClickHouse and Redis
POSTGRES_MODE=external
CLICKHOUSE_MODE=container  
REDIS_MODE=container

# External PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sspserver
POSTGRES_USER=sspserver
POSTGRES_PASSWORD=changeme

# ClickHouse and Redis will run in containers
CLICKHOUSE_HOST=localhost
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_TCP_PORT=9000
CLICKHOUSE_DB=sspserver
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Redis Configuration (containerized, but configuration available for override)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# SSP Server Ports
SSP_SERVER_PORT=8080
SSP_API_PORT=8081
SSP_CONTROL_PORT=8082

# Nginx Proxy Ports  
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Domain Configuration
SSP_SERVER_DOMAIN=localhost
SSP_API_DOMAIN=api.localhost
SSP_CONTROL_DOMAIN=control.localhost
